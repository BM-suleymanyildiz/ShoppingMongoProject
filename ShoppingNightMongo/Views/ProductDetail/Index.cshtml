@model List<ShoppingNightMongo.Dtos.ProductDetailDtos.ResultProductDetailDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container">
    <br />
    <br />
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ürün</th>
                <th scope="col">Resim Url</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.ProductName</td>
                    <td>@item.ImageUrl</td>
                    <td><a href="/ProductDetail/DeleteProductDetail/@item.ProductDetailId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/ProductDetail/UpdateProductDetail/@item.ProductDetailId" class="btn btn-warning">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/ProductDetail/CreateProductDetail" class="btn btn-info">Yeni Ürün Resmi Ekle</a>
</div>










