@model List<ShoppingNightMongo.Dtos.CustomerDtos.ResultCustomerDto>
@{
    ViewData["Title"] = "CustomerList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.CustomerName</td>
                <td>@item.CustomerSurname</td>
                <td><a href="/Customers/DeleteCustomer/@item.CustomerId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Customers/UpdateCustomer/@item.CustomerId" class="btn btn-success">Güncelle</a></td>

            </tr>
        }
    </table>
    <a href="/Customers/CreateCustomer/" class="btn btn-primary">Yeni Müşteri Girişi</a>
</div>